<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="01/01/2021"
        android:key="start_date"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/start_date"
        android:icon="@drawable/ic_today"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:defaultValue="31/01/2021"
        android:key="end_date"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/end_date"
        android:icon="@drawable/ic_end"
        app:useSimpleSummaryProvider="true" />

</PreferenceScreen>
